#job
  .job(id='job-' + job.id)
    h1 Job

    script
      $(function(){
        init();
        pollStatsForJob(#{job.id}, 1000);
      });

    table
      tr
        td Id
        td= job.id
      tr
        td Type
        td= job.type
      tr
        td State
        td= job.state
      tr
        td Priority
        td= job.priority()
      tr.progress
        td Progress
        td: span.bar= job.progress()
      tr.data
        td(colspan=2)
          pre= inspect(job.data)
    